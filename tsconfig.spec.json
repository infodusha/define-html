{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "nodenext",
        "newLine": "lf",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["tests/**/*.spec.ts", "playwright.config.ts"],
    "exclude": ["node_modules", "dist", "src/**/*.ts"]
}
